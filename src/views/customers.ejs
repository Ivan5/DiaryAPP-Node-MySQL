<% include partials/_header %>
<div class="container">
  <div class="row mt-5">
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <th>NÂ°</th>
          <th>Name</th>
          <th>Address</th>
          <th>Phone</th>
          <th>Actions</th>
        </thead>
        <tbody>
          <% if(data) { %>
            <% for(var i = 0;i<data.length; i++){ %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].name %></td>
                <td><%= data[i].address %></td>
                <td><%= data[i].phone %></td>
              </tr>
            <%} %>
        <%  } %>
        </tbody>
      </table>
    </div>
    <hr>
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/add" method="post">
            <div class="form-group">
              <input type="text" name="name" placeholder="Add Name" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="address" placeholder="Add Address" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="phone" placeholder="Add phone" class="form-control">
            </div>
            <input type="submit" name="" value="Submit" class="btn btn-primary btn-block">
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<% include partials/_footer %>
